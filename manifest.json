{
	"manifest_version": 2,

	"author": "Mayank Patke",
	"name": "ChromeScript",
	"description": "This extension makes writing scripts easy.",
	"version": "0.1",
	"homepage_url": "https://github.com/Fishythefish/chromescript",

	"icons": {
		"16": "icon/icon16.png",
		"48": "icon/icon48.png",
		"128": "icon/icon128.png"
	},

	"devtools_page": "chromescript.html",

	"browser_action": {
		"default_icon": {
			"19": "icon/icon19.png",
			"38": "icon/icon38.png"
		},
		"default_title": "ChromeScript",
		"default_popup": "chromescript.html"
	},

	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"css": [
				"CodeMirror/lib/codemirror.css"
			],
			"js": [
				"CodeMirror/mode/javascript/javascript.js",
				"CodeMirror/lib/codemirror.js"
            ]
		}
	],

	"incognito": "split",
	"offline_enabled": true,

	"permissions": [
		"<all_urls>",
		"activeTab",
		"contentSettings",
		"contextMenus",
		"storage"
	]
}
